             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BaiTapLon"
             mc:Ignorable="d" 
             d:DesignHeight="494" d:DesignWidth="564">
    <Grid>
        <TextBlock Text="Thay đổi giao diện" VerticalAlignment="top" HorizontalAlignment="Left" Foreground="White" FontSize="30" Margin="36 10 0 0"></TextBlock>
